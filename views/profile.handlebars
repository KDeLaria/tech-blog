<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{req.session.username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Title:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-contents">Contents:</label>
        <textarea class="form-input" id="blog-contents" name="blog-contents"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.contents}}</a></h4>
      </div>
      {{#if req.session.user_id blog.user.id}}
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
      {{/if}}
      {{#each blog.comments as |comment| }}
      <div class="col-md-10">
        <p>{{{comment.contents}}}</p>
        <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}.</p>
      </div>
      {{/each}}
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
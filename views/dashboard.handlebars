<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Title:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-contents">Contents:</label>
        <textarea class="form-input" id="blog-contents" name="blog-contents"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" id="create-button" class="btn btn-primary">Create</button>
        <button type="submit" id="update-button" class="btn btn-primary" style="display:none">Update</button>
      </div>
    </form>
  </div>

  {{#if blogs}}
  <div class="col-md-6 blog-list">
    <h3>Current blogs:</h3>
    {{#each blogs as |blog|}}
    <div class="row mb-2 justify-space-between">
        <h4><a href="/dashboard/{{blog.id}}">{{blog.name}} </a></h4><p class="fs-6">{{blog.date_created}}</p>
        <button class="btn btn-sm btn-warning update" data-id="{{blog.id}}">UPDATE</button>
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="../js/dashboard.js"></script>